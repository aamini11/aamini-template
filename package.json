{
	"name": "aamini-template",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "astro build",
		"dev": "astro dev --port 4002",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --type-aware --max-warnings=0",
		"format": "prettier --check **/*.{js,ts,tsx,json,html,css,md,yml,yaml,astro}",
		"format:fix": "prettier --write **/*.{js,ts,tsx,json,html,css,md,yml,yaml,astro}",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"e2e": "playwright test",
		"e2e:update": "playwright test --update-snapshots",
		"verify": "turbo run format build lint test typecheck e2e"
	},
	"dependencies": {
		"astro": "^5.13.4",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@astrojs/react": "^4.3.0",
		"@astrojs/vercel": "^8.2.5",
		"@playwright/test": "^1.54.1",
		"@prettier/plugin-oxc": "^0.0.4",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.12.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"jsdom": "^26.1.0",
		"msw": "^2.10.4",
		"oxlint": "^1.14.0",
		"oxlint-tsgolint": "^0.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-jsdoc": "^1.3.3",
		"prettier-plugin-organize-imports": "^4.2.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"tailwindcss": "^4.1.12",
		"typescript": "5.8.3",
		"vite": "^7.1.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=22"
	}
}
